<h1>Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= product.product_name %></h5>
          <p class="card-text">Price: <%= number_to_currency(product.product_price) %></p>
          <%= link_to "Add to Cart", "#", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @products %>
