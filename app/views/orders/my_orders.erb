<!-- app/views/orders/my_orders.html.erb -->
<h1>My Orders</h1>

<% if @orders.empty? %>
  <p>You have no orders yet.</p>
<% else %>
  <table>
    <thead>
      <tr>
        
        <th>Date</th>
        
        <th>Total</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          
          <td><%= order.created_at.strftime("%d %b %Y") %></td>

          <td>$<%= order.total %></td>
          <td><%= link_to 'View', order_path(order) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to 'Back to Account', account_path, class: 'btn btn-primary' %>