<div class="shipping_address_container">
  <%= form_for @order, html: { class: 'form-group shipping-address-form' } do |f| %>
    <h3 class="text-center">Shipping Address</h3>
    <div class="mb-3">
      <%= f.label :address, "Address", class: 'form-label' %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :city, "City", class: 'form-label' %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :province_id, "Province", class: 'form-label' %>
      <%= f.collection_select :province_id, Province.all, :id, :name, { include_blank: true }, { class: 'form-select' } %>
    </div>
    <%= f.submit "Continue", class: 'btn btn-primary' %>
  <% end %>
</div>
