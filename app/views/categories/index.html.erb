<div class="container">
  <h1 class="mt-4 mb-4">Categories</h1>
  <div class="list-group">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: "list-group-item list-group-item-action" do %>
        <%= category.category_name %>
      <% end %>
    <% end %>
  </div>
</div>
