<h1>Account Details</h1>

<%= form_for @user, url: update_address_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :province_id %>
    <%= f.collection_select :province_id, Province.all, :id, :name, { prompt: "Select province" }, class: 'form-control' %>
  </div>
  <%= f.submit 'Update Address', class: 'btn btn-primary' %>

  <%= link_to 'View My Orders', my_orders_path, class: 'btn btn-primary' %>


  <% if user_signed_in? %>
        <li><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-item nav-link" %></li>
    <% end %>
<% end %>



